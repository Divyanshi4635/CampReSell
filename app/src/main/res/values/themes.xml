<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme matching the reference design -->
    <style name="Theme.BuyAndSell" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/backgroundLight</item>
        <item name="android:colorBackground">@color/backgroundLight</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>